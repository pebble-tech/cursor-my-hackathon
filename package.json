{
  "name": "base-monorepo",
  "version": "1.0.0",
  "keywords": [],
  "type": "module",
  "engines": {
    "node": "^20"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531",
  "scripts": {
    "build": "pnpm --filter '@base/*' build",
    "dev:app": "pnpm --filter '@base/app' dev",
    "dev:core": "pnpm --filter '@base/core' dev",
    "db:push": "pnpm --filter '@base/core' db:push",
    "db:generate": "pnpm --filter '@base/core' db:generate",
    "db:migrate": "pnpm --filter '@base/core' db:migrate",
    "db:seed": "pnpm --filter '@base/core' db:seed",
    "db:studio": "pnpm --filter '@base/core' db:studio",
    "lint": "oxlint",
    "typecheck": "tsc --build --emitDeclarationOnly",
    "preview": "pnpm --filter '@base/app' preview",
    "storybook": "pnpm --filter '@base/ui' dev",
    "ui:add": "pnpm --filter @base/ui ui:add",
    "clean:dts": "bash scripts/clean-dts.sh"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.31.0",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm dlx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}": "oxlint"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "catalog:"
    }
  }
}
